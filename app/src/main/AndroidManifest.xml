<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstone.teamchooser">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".GameListActivity"
            android:label="@string/game_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppInfoListActivity"
            android:label="@string/app_info_list"
            android:parentActivityName=".GameListActivity" />
        <activity
            android:name=".InstructionActivity"
            android:parentActivityName=".AppInfoListActivity" />
        <activity
            android:name=".CreateOrEditGameActivity"
            android:label="Create or Edit Game" />
        <activity android:name=".PlayerListActivity" />
        <activity android:name=".CreateOrEditPlayerActivity"></activity>
    </application>

</manifest>