<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateOrEditPlayerActivity">
    <android.support.v7.widget.Toolbar
        style="@style/ActionBarBaseTheme"
        android:id="@+id/create_player_toolbar_top"
        app:titleTextColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_player_toolbar_top">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:weightSum="1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dip"
            android:id="@+id/player_name_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/game_name"
                android:id="@+id/player_name_text_view"
                android:layout_marginLeft="50dip" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/game_name_input"
                android:layout_weight="0.75"
                android:maxLength="30"
                android:inputType="textPersonName"
                android:layout_marginLeft="27dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:weightSum="1"
            android:id="@+id/player_level_layout"
            android:layout_below="@+id/player_name_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/team_a_name"
                android:id="@+id/team_a_name_text_view"
                android:layout_marginLeft="50dip" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/team_a_name_input"
                android:layout_weight="0.75"
                android:layout_marginLeft="10dip"
                android:maxLength="30"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:weightSum="1"
            android:id="@+id/balance_o_d_ratings_layout"
            android:layout_below="@id/player_level_layout"
            android:animateLayoutChanges="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/use_o_d_ratings_text"
                android:id="@+id/balance_o_d_ratings_text_view"
                android:layout_gravity="center"
                android:layout_marginLeft="60dip" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/balance_o_d_ratings_switch"
                android:checked="false"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
