<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.capstone.teamchooser.AppInfoListActivity">

    <android.support.v7.widget.Toolbar
        style="@style/ActionBarBaseTheme"
        android:id="@+id/app_info_list_toolbar"
        app:title="@string/app_info_list"
        app:titleTextColor="@android:color/white" />
   <ListView
        android:id="@+id/app_info_list"
        android:drawSelectorOnTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_info_list_toolbar" />
</RelativeLayout>
